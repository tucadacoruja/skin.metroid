<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.metroid"
  version="0.2.3"
  name="Metroid"
  provider-name="MassIV">
  <requires>
  
    <import addon="xbmc.gui" version="5.0.0"/>
	<import addon="script.favourites" version="3.2.5"/>
	<import addon="script.artwork.downloader" version="12.0.0"/>
	<import addon="script.globalsearch" version="1.1.1" />
	<import addon="script.cu.lrclyrics" version="2.0.6" />
	<import addon="script.grab.fanart" version="0.12.2" />
	
  </requires>
  <extension 
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt" 
    effectslowdown="0.80"
    debugging="false">
	<res width="1280" height="720" aspect="16:9" default="true" folder="720p"/>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Metroid is a mix of the Android and Metro designs. Touch optional 16:9 skin.</summary>
    <description lang="en">Metroid is all about simplicity, usability and easy navigation. Touch optional 16:9 skin.</description>
	<disclaimer lang="en">No PVR support, only channels.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>