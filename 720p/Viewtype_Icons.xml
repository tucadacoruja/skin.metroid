<?xml version="1.0" encoding="UTF-8"?>
<includes>


    <include name="Icons">
        <control type="group">
			
			<left>60</left>
			<top>10</top>
			
			<include>InfoOpenClose</include>
			<include>InfoOpenClose</include>
			<include>WidgetsAnimation</include>
			<include>ContextFade</include>	
			<include>Keyboard</include>
			<include>Favourites</include>
			<visible>Control.IsVisible(677)</visible>
			<visible>![Window.IsVisible(pictureinfo) | Window.IsVisible(smartplaylisteditor)]</visible>
	
			<control type="label">
				<left>270</left>
				<top>100</top>
				<width>870</width>
				<font>Segoe28</font>
				<label>$VAR[IconShowTitle]</label>
				<textcolor>itemdetail</textcolor>
				<scroll>true</scroll>
				<animation effect="slide" start="0,0" end="-240,0" time="600" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
			</control>
			
			<control type="panel" id="677">
				<visible>[Container.Content(episodes) + substring(Container.FolderPath,videodb://tvshows)]</visible>
	
				<left>270</left>
				<top>170</top>
				<include condition="!Skin.HasSetting(LockMainMenu)">IconsViewWidth1</include>
				<include condition="Skin.HasSetting(LockMainMenu)">IconsViewWidth2</include>
				<height>480</height>
				<onup>677</onup>
				<ondown>677</ondown>
				<onleft>730</onleft>
				<onright>677</onright>
				<viewtype label="31267">info</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>730</pagecontrol>
				<focusposition>0</focusposition>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<animation effect="slide" start="0,0" end="-240,0" time="600" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
								
				<itemlayout width="600" height="160">
					<control type="group">
						<left>0</left>
						<top>0</top>

						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>153</width>
							<height>150</height>
							<texture>diffuse/postershadow.png</texture>
							<align>bottom</align>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>89ffffff</colordiffuse>
							
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>140</width>
							<height>140</height>
							<bordertexture border="3">White35p.png</bordertexture>
							<bordersize>3</bordersize>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture fallback="DefaultCatch.png">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>400</fadetime>
						</control>
						
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>140</width>
							<height>140</height>
							<aspectratio>keep</aspectratio>
							<texture fallback="DefaultFallback.png">$VAR[Episode_Fallback]</texture>
							<visible>IsEmpty(ListItem.Art(thumb))</visible>
							
						</control>
						
						<control type="image">
							<left>10</left>
							<top>0</top>
							<width>30</width>
							<height>30</height>
							<texture>bookmark.png</texture>
							<visible>!substring(ListItem.Label,..,left) + [Stringcompare(Skin.String(BookmarkDBID1),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID2),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID3),ListItem.DBID)]</visible>
							<visible>Container.Content(episodes) + substring(Container.FolderPath,videodb://tvshows)</visible>
						</control>
						
						<control type="label">
							<left>160</left>
							<top>5</top>
							<width>390</width>
							<height>30</height>
							<label>$VAR[Episode_title]</label>
							<font>MainMenu21</font>
							<textcolor>E0FFFFFF</textcolor>
							<align>left</align>
							<scroll>false</scroll>
						</control>
						<control type="label">
							<left>160</left>
							<top>40</top>
							<width>390</width>
							<height>30</height>
							<align>left</align>
							<label>$VAR[Aired_or_Artist]</label>
							<visible>true</visible>
							<scroll>false</scroll>
							<font>SubMenu20</font>
							<textcolor>B5FFFFFF</textcolor>
							<visible>!IsEmpty(ListItem.Title) | !substring(ListItem.Label,..,left)</visible>
						</control>
						<control type="textbox">
							<left>160</left>
							<top>80</top>
							<width>390</width>
							<height>55</height>
							<label>$INFO[ListItem.plot]</label>
							<font>PlotOnly</font>
							<textcolor>B5FFFFFF</textcolor>
							<aligny>top</aligny>

							<autoscroll>false</autoscroll>
						</control>
	
						
						<control type="image">
							<left>105</left>
							<top>105</top>
							<width>32</width>
							<height>32</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>stretch</aspectratio>
							<!-- colordiffuse>FFABABAB</colordiffuse -->
							
						</control>
						<!-- control type="image">
							<left>109</left>
							<top>109</top>
							<width>23</width>
							<height>23</height>
							<aspectratio align="left" aligny="center">stretch</aspectratio>
							<texture>Watched.png</texture>
							<visible>stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
							<visible>!Skin.HasSetting(WatchedOverlays)</visible>
						</control -->
						
					</control>	
					
				</itemlayout>

				<focusedlayout width="600" height="160">
				
					<control type="group">
					<animation effect="zoom" start="90" end="100" center="70,70" time="300" tween="sine" easing="in">Focus</animation>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>153</width>
							<height>150</height>
							<texture>diffuse/postershadow.png</texture>
							<align>bottom</align>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>89ffffff</colordiffuse>
							
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>140</width>
							<height>140</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<bordertexture border="3">blue3.png</bordertexture>
							<bordersize>3</bordersize>
							<texture fallback="DefaultCatch.png">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>400</fadetime>
							
						</control>
						
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>140</width>
							<height>140</height>
							<aspectratio>keep</aspectratio>
							<texture fallback="DefaultFallback.png">$VAR[Episode_Fallback]</texture>
							<visible>IsEmpty(ListItem.Art(thumb))</visible>
						</control>
						<control type="image">
							<left>10</left>
							<top>0</top>
							<width>30</width>
							<height>30</height>
							<texture>bookmark.png</texture>
							<visible>!substring(ListItem.Label,..,left) + [Stringcompare(Skin.String(BookmarkDBID1),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID2),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID3),ListItem.DBID)]</visible>
							<visible>Container.Content(episodes) + substring(Container.FolderPath,videodb://tvshows)</visible>
						</control>
									
						<control type="image">
							<left>105</left>
							<top>105</top>
							<width>32</width>
							<height>32</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>blue</colordiffuse>
						</control>
					</control>
					
						<control type="label">
							<left>160</left>
							<top>5</top>
							<width>390</width>
							<height>30</height>
							<label>$VAR[Episode_title]</label>
							<font>MainMenu21</font>
							<textcolor>white</textcolor>
							<align>left</align>
							<scroll>false</scroll>
						</control>
						<control type="label">
							<left>160</left>
							<top>40</top>
							<width>390</width>
							<height>30</height>
							<align>left</align>
							<label>$VAR[Aired_or_Artist]</label>
							<visible>true</visible>
							<scroll>false</scroll>
							<font>SubMenu20</font>
							<textcolor>D6FFFFFF</textcolor>
							<visible>!IsEmpty(ListItem.Title) | !substring(ListItem.Label,..,left)</visible>
						</control>
						<control type="textbox">
							<left>160</left>
							<top>80</top>
							<width>390</width>
							<height>55</height>
							<label>$INFO[ListItem.plot]</label>
							<font>PlotOnly</font>
							<textcolor>D6FFFFFF</textcolor>
							<aligny>top</aligny>
						
							<autoscroll>false</autoscroll>
						</control>
									
				</focusedlayout>

			</control>
			
			<control type="scrollbar" id="730">
			
				<texturesliderbackground>buttons/scrollbgV.png</texturesliderbackground>
				<texturesliderbar>-</texturesliderbar>
				<texturesliderbarfocus>-</texturesliderbarfocus>
				<textureslidernib>buttons/scrollnibV.png</textureslidernib>
				<textureslidernibfocus>buttons/scrollnibV.png</textureslidernibfocus>
				<orientation>Vertical</orientation>
				<showonepage>true</showonepage>
				<left>225</left>
				<top>160</top>
				<width>10</width>
				<height>515</height>
				<onleft>300</onleft>
				<onright>677</onright>
				<visible>Control.IsVisible(677)</visible>
				<animation effect="fade" start="100" end="50" time="200" reversable="false" condition="!Control.HasFocus(730)">Conditional</animation>
				<animation effect="slide" start="0,0" end="-250,0" time="600" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
			</control>
		
		</control>
    </include>
	
</includes>