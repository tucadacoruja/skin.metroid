<?xml version="1.0" encoding="UTF-8"?>
<includes>


    <include name="Icons">
        <control type="group">
			
			<posx>60</posx>
			<posy>10</posy>
			
			<include>InfoOpenClose</include>
			<include>MusicInfoOpenClose</include>
			<include>WidgetsAnimation</include>
			<include>ContextFade</include>	
			<include>Keyboard</include>
			<include>Favourites</include>
			<visible>Control.IsVisible(677)</visible>
			<visible>![Window.IsVisible(pictureinfo) | Window.IsVisible(smartplaylisteditor)]</visible>
	
			<control type="label">
				<posx>270</posx>
				<posy>100</posy>
				<width>870</width>
				<font>Segoe28</font>
				<label>$VAR[IconShowTitle]</label>
				<textcolor>itemdetail</textcolor>
				<scroll>true</scroll>
				<animation effect="slide" start="0,0" end="-240,0" time="600" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
			</control>
			
			<control type="panel" id="677">
				<visible>[Container.Content(episodes) + substring(Container.FolderPath,videodb://tvshows)]</visible>
	
				<posx>270</posx>
				<posy>170</posy>
				<include condition="!Skin.HasSetting(LockMainMenu)">IconsViewWidth1</include>
				<include condition="Skin.HasSetting(LockMainMenu)">IconsViewWidth2</include>
				<height>480</height>
				<onup>677</onup>
				<ondown>677</ondown>
				<onleft>730</onleft>
				<onright>677</onright>
				<viewtype label="Icons">info</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>730</pagecontrol>
				<focusposition>0</focusposition>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<animation effect="slide" start="0,0" end="-240,0" time="600" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
								
				<itemlayout width="600" height="160">
					<control type="group">
						<posx>0</posx>
						<posy>0</posy>

						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>153</width>
							<height>150</height>
							<texture>diffuse/postershadow.png</texture>
							<align>bottom</align>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>89ffffff</colordiffuse>
							
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>140</width>
							<height>140</height>
							<bordertexture border="3">White35p.png</bordertexture>
							<bordersize>3</bordersize>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture fallback="DefaultAlbumCover.png">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>400</fadetime>
						</control>
						
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>140</width>
							<height>140</height>
							<aspectratio>keep</aspectratio>
							<texture fallback="DefaultFallback.png">$VAR[Episode_Fallback]</texture>
							<visible>IsEmpty(ListItem.Art(thumb))</visible>
							
						</control>
						
						<control type="image">
							<posx>10</posx>
							<posy>0</posy>
							<width>30</width>
							<height>30</height>
							<texture>bookmark.png</texture>
							<visible>!substring(ListItem.Label,..,left) + [Stringcompare(Skin.String(BookmarkDBID1),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID2),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID3),ListItem.DBID)]</visible>
							<visible>Container.Content(episodes) + substring(Container.FolderPath,videodb://tvshows)</visible>
						</control>
						
						<control type="label">
							<posx>160</posx>
							<posy>5</posy>
							<width>390</width>
							<height>30</height>
							<label>$VAR[Episode_title]</label>
							<font>MainMenu21</font>
							<textcolor>FFACACAC</textcolor>
							<align>left</align>
							<scroll>false</scroll>
						</control>
						<control type="label">
							<posx>160</posx>
							<posy>40</posy>
							<width>390</width>
							<height>30</height>
							<align>left</align>
							<label>$VAR[Aired_or_Artist]</label>
							<visible>true</visible>
							<scroll>false</scroll>
							<font>SubMenu20</font>
							<textcolor>FF959595</textcolor>
							<visible>!IsEmpty(ListItem.Title) | !substring(ListItem.Label,..,left)</visible>
						</control>
						<control type="textbox">
							<posx>160</posx>
							<posy>80</posy>
							<width>390</width>
							<height>55</height>
							<label>$INFO[ListItem.plot]</label>
							<font>PlotOnly</font>
							<textcolor>FF898989</textcolor>
							<aligny>top</aligny>
							<shadowcolor>00FFFFFF</shadowcolor>
							<autoscroll>false</autoscroll>
						</control>
	
						
						<control type="image">
							<posx>108</posx>
							<posy>108</posy>
							<width>32</width>
							<height>32</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>FFABABAB</colordiffuse>
							
						</control>
						
					</control>	
					
				</itemlayout>

				<focusedlayout width="600" height="160">
				
					<control type="group">
					<animation effect="zoom" start="90" end="100" center="70,70" time="300" tween="sine" easing="in">Focus</animation>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>153</width>
							<height>150</height>
							<texture>diffuse/postershadow.png</texture>
							<align>bottom</align>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>89ffffff</colordiffuse>
							
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>140</width>
							<height>140</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<bordertexture border="3">blue3.png</bordertexture>
							<bordersize>3</bordersize>
							<texture fallback="DefaultAlbumCover.png">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>400</fadetime>
							
						</control>
						
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>140</width>
							<height>140</height>
							<aspectratio>keep</aspectratio>
							<texture fallback="DefaultFallback.png">$VAR[Episode_Fallback]</texture>
							<visible>IsEmpty(ListItem.Art(thumb))</visible>
						</control>
						<control type="image">
							<posx>10</posx>
							<posy>0</posy>
							<width>30</width>
							<height>30</height>
							<texture>bookmark.png</texture>
							<visible>!substring(ListItem.Label,..,left) + [Stringcompare(Skin.String(BookmarkDBID1),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID2),ListItem.DBID) | Stringcompare(Skin.String(BookmarkDBID3),ListItem.DBID)]</visible>
							<visible>Container.Content(episodes) + substring(Container.FolderPath,videodb://tvshows)</visible>
						</control>
									
						<control type="image">
							<posx>108</posx>
							<posy>108</posy>
							<width>32</width>
							<height>32</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>blue</colordiffuse>
						</control>
					</control>
					
						<control type="label">
							<posx>160</posx>
							<posy>5</posy>
							<width>390</width>
							<height>30</height>
							<label>$VAR[Episode_title]</label>
							<font>MainMenu21</font>
							<textcolor>white</textcolor>
							<align>left</align>
							<scroll>false</scroll>
						</control>
						<control type="label">
							<posx>160</posx>
							<posy>40</posy>
							<width>390</width>
							<height>30</height>
							<align>left</align>
							<label>$VAR[Aired_or_Artist]</label>
							<visible>true</visible>
							<scroll>false</scroll>
							<font>SubMenu20</font>
							<textcolor>FFACACAC</textcolor>
							<visible>!IsEmpty(ListItem.Title) | !substring(ListItem.Label,..,left)</visible>
						</control>
						<control type="textbox">
							<posx>160</posx>
							<posy>80</posy>
							<width>390</width>
							<height>55</height>
							<label>$INFO[ListItem.plot]</label>
							<font>PlotOnly</font>
							<textcolor>FFACACAC</textcolor>
							<aligny>top</aligny>
						
							<autoscroll>false</autoscroll>
						</control>
									
				</focusedlayout>

			</control>
			
			<control type="scrollbar" id="730">
			
				<texturesliderbackground>buttons/scrollbgV.png</texturesliderbackground>
				<texturesliderbar>-</texturesliderbar>
				<texturesliderbarfocus>-</texturesliderbarfocus>
				<textureslidernib>buttons/scrollnibV.png</textureslidernib>
				<textureslidernibfocus>buttons/scrollnibV.png</textureslidernibfocus>
				<orientation>Vertical</orientation>
				<showonepage>true</showonepage>
				<posx>210</posx>
				<posy>160</posy>
				<width>10</width>
				<height>515</height>
				<onleft>300</onleft>
				<onright>677</onright>
				<visible>Control.IsVisible(677)</visible>
				<animation effect="fade" start="100" end="50" time="200" reversable="false" condition="!Control.HasFocus(730)">Conditional</animation>
				<animation effect="slide" start="0,0" end="-250,0" time="600" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
			</control>
		
		</control>
    </include>
	
</includes>