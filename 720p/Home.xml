<onload condition="Window.Previous(startup) + Skin.HasSetting(DlLogosStartup)">RunScript(script.artwork.downloader,mode=custom,mediatype=tvshow,clearlogo)</onload>
<onload condition="Window.Previous(startup) + Skin.HasSetting(DlLogosStartup)">RunScript(script.artwork.downloader,mode=custom,mediatype=movie,clearlogo)</onload>
<onload>Skin.SetString(MainColorString,blue)</onload>
<onload condition="System.HasAddon(script.grab.fanart)">RunScript(script.grab.fanart,mode=random,mediatype=movies,refresh=10)</onload>


<!----Set bookmark strings to a non number and set cycle to start with bookmark 1 of 3---->
<onload condition="IsEmpty(skin.string(cycle)">skin.setstring(cycle,9002)</onload>
<onload condition="IsEmpty(skin.string(Bookmark 1 of 3)">skin.setstring(Bookmark 1 of 3,empty)</onload>
<onload condition="IsEmpty(skin.string(Bookmark 2 of 3)">skin.setstring(Bookmark 2 of 3,empty)</onload>
<onload condition="IsEmpty(skin.string(Bookmark 3 of 3)">skin.setstring(Bookmark 3 of 3,empty)</onload>
