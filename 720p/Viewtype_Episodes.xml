					<font>EpisodeTitle</font>
					<textcolor>taskbar</textcolor>
					<selectedcolor>taskbar</selectedcolor>
					<scroll>false</scroll>
					<animation type="Focus" reversible="false">
						<effect type="fade" start="0" end="90" time="300" />
