					<animation effect="fade" start="0" end="50" time="0" condition="true">Conditional</animation>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
					</animation>
					<visible>!substring(Listitem.Label,..,left)</visible>
				</control>
				<control type="image">
