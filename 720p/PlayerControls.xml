<window type="dialog" id="400">
<defaultcontrol always="true">4</defaultcontrol>
<allowoverlay>yes</allowoverlay>
  
<coordinates>
  <system>1</system>
  <posx>0</posx>
  <posy>0</posy>
</coordinates>
  
<controls>


  <control type="label">
    <label>PlayerControls.xml</label>
  </control>

	<control type="grouplist">
			<posx>130</posx>
			<posy>10</posy>
			<width>500</width>
			<height>100</height>
			<align>left</align>
			<orientation>horizontal</orientation>
			<itemgap>5</itemgap>
			
			<animation effect="slide" start="0,-100" end="0,0" time="200" easing="out" tween="cubic" reversable="false" >WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-100" time="200" easing="out" tween="cubic" reversable="false" >WindowClose</animation>
			
		
			<control type="image">
				<height>55</height>
				<width>55</width>
				<texture>osd/buttons/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="100" end="40" time="100" condition="Control.HasFocus(2)">Conditional</animation>
			</control>
			<control type="image">
				<height>55</height>
				<width>55</width>
				<texture>osd/buttons/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="100" end="40" time="100" condition="Control.HasFocus(3)">Conditional</animation>
			</control>
			<control type="image">
				<height>55</height>
				<width>55</width>
				<texture>osd/buttons/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="100" end="40" time="100" condition="Control.HasFocus(4)">Conditional</animation>
			</control>
			<control type="image">
				<height>55</height>
				<width>55</width>
				<texture>osd/buttons/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="100" end="40" time="100" condition="Control.HasFocus(5)">Conditional</animation>
			</control>
			<control type="image">
				<height>55</height>
				<width>55</width>
				<texture>osd/buttons/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="100" end="40" time="100" condition="Control.HasFocus(6)">Conditional</animation>
			</control>
			
			
	</control>		
	<control type="grouplist" id="1">
			
			<posx>130</posx>
			<posy>10</posy>
			<width>500</width>
			<height>100</height>
			<align>left</align>
			<orientation>horizontal</orientation>
			<itemgap>5</itemgap>
			<focusposition>3</focusposition>
			<ondown>Dialog.Close(playercontrols)</ondown>
			
			
			<animation effect="slide" start="0,-100" end="0,0" time="200" easing="out" tween="cubic" reversable="false" >WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-100" time="200" easing="out" tween="cubic" reversable="false" >WindowClose</animation>
			
			<control type="button" id="2">
				<description>previous</description>
				<height>55</height>
				<width>55</width>
				<aspectratio>keep</aspectratio>
				<texturefocus flipx="true">osd/buttons/skip.png</texturefocus>
				<texturenofocus flipx="true">osd/buttons/skip.png</texturenofocus>
				
				<onclick>xbmc.playercontrol(previous)</onclick>
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>
			
			<control type="button" id="3">
			<description>rewind</description>
				<height>55</height>
				<width>55</width>
				<aspectratio>keep</aspectratio>
				<texturefocus flipx="true">osd/buttons/ff.png</texturefocus>
				<texturenofocus flipx="true">osd/buttons/ff.png</texturenofocus>
				
				<onclick>xbmc.playercontrol(rewind)</onclick>
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>
			
			<control type="togglebutton" id="4">
				<description>Play</description>
				<height>55</height>
				<width>55</width>
				<texturefocus>osd/buttons/play.png</texturefocus>
				<texturenofocus>osd/buttons/play.png</texturenofocus>
				<usealttexture>Player.Playing</usealttexture>
				<alttexturefocus>osd/buttons/pause.png</alttexturefocus>
				<alttexturenofocus>osd/buttons/pause.png</alttexturenofocus>
				<onclick>playercontrol(play)</onclick>
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>
			
			<control type="button" id="5">
				<description>forward</description>
				<height>55</height>
				<width>55</width>
				<aspectratio>keep</aspectratio>
				<texturefocus>osd/buttons/ff.png</texturefocus>
				<texturenofocus>osd/buttons/ff.png</texturenofocus>
				
				<onclick>xbmc.playercontrol(forward)</onclick>
				
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>
	
			
			
			<control type="button" id="6">
				<description>next</description>
				<height>55</height>
				<width>55</width>
				<aspectratio>keep</aspectratio>
				<texturefocus>osd/buttons/skip.png</texturefocus>
				<texturenofocus>osd/buttons/skip.png</texturenofocus>
				
				<onclick>xbmc.playercontrol(next)</onclick>
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>
		
			
			
		</control>
</controls>
  
</window>