<?xml version="1.0" encoding="UTF-8"?>

<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <allowoverlay>no</allowoverlay>
	<backgroundcolor>0</backgroundcolor>
	
	<onload condition="!Skin.HasSetting(WidgetVisibility)">Skin.ToggleSetting(WidgetVisibility)</onload>
	
<controls>

	<animation effect="fade" start="0" end="100" time="800">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
	
    <control type="button" id="10">
        <description>trigger</description>
        <onfocus>SetFocus(11)</onfocus>
        <animation effect="fade" end="1" time="0" condition="true">Conditional</animation>
    </control>

    <!--  Show home if skin widgets loading is finished  -->
    <control type="button" id="11">
	  <onfocus condition="!System.HasAddon(service.skin.widgets)">SetFocus(12)</onfocus>
      <onfocus condition="System.HasAddon(service.skin.widgets)">SetFocus(11)</onfocus>
      <visible>IsEmpty(Window(Home).Property(SkinWidgets_Running))</visible>
	  <animation effect="fade" end="1" time="0" condition="true">Conditional</animation>
    </control>
    <control type="button" id="11">
      <onfocus>ReplaceWindow($INFO[System.StartupWindow])</onfocus>
      <visible>!IsEmpty(Window(Home).Property(SkinWidgets_Running))</visible>
	  <animation effect="fade" end="1" time="0" condition="true">Conditional</animation>
    </control>
    <control type="button" id="12">
      <onfocus>ReplaceWindow($INFO[System.StartupWindow])</onfocus>
	  <animation effect="fade" end="1" time="0" condition="true">Conditional</animation>
    </control>
	<control type="image">
		<left>0</left>
		<top>0</top>
		<width>1280</width>
		<height>720</height>
		<aspectratio>stretch</aspectratio>
		<texture background="true">MetroidBG.png</texture>
	</control>
	
	<control type="group">
		<animation effect="fade" start="0" end="100" time="300" delay="700" >WindowOpen</animation>
		<include>Loading</include>
	</control>
	
  </controls>
</window>