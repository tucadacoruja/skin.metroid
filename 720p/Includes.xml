	<include name="GeneralFanart">
	
	<control type="group">
		<animation effect="slide" start="0,0" end="-250,0" time="600" condition="!Control.HasFocus(301) + ![Window.IsVisible(home) | Window.IsVisible(profiles) | Window.IsVisible(weather)] + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
		
