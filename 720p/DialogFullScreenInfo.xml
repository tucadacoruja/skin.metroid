<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="142">
    <defaultcontrol always="true">9000</defaultcontrol>
<controls>

<control type="group">

	<control type="button" id="9000">
		<left>0</left>
		<top>0</top>
		<width>1280</width>
		<height>720</height>
		<description>fullscreen back button</description>
		<aspectratio>stretch</aspectratio>
		<texturefocus>empty.png</texturefocus>
		<texturenofocus>empty.png</texturenofocus>
		
		<onclick>back</onclick>
		<animation effect="fade" start="1" end="1" time="0" condition="true">Conditional</animation>
	</control>
	
	<control type="group">
		<left>885</left>
		<top>0</top>
		<width>400</width>
		<height>720</height>
		
		<animation type="WindowOpen">
			<effect type="slide" start="600,0" end="0,0" time="500" delay="400" tween="quadratic" easing="out" />
		</animation>
		<animation type="WindowClose">
			<effect type="slide" start="0,0" end="600,0" time="500"  />
		</animation>
		
		<control type="image">
			<left>10</left>
			<top>0</top>
			<width>500</width>
			<height>720</height>
			<texture background="true">BlueBackground.png</texture>
			<colordiffuse>70555555</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="grouplist">
			<left>40</left>
			<top>40</top>
			<width>320</width>
			<height>680</height>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<itemgap>10</itemgap>
			
			<control type="textbox">
				<width>320</width>
				<height>106</height>
				<textcolor>FFD7D7D7</textcolor>
				<font>FullscreenInfo</font>
				<label>[UPPERCASE]$INFO[VideoPlayer.Title][/UPPERCASE]</label>
				<aligny>top</aligny>
				<autoscroll>false</autoscroll>
			</control>
			
			<control type="label">
				<top>20</top>
				<width max="320">auto</width>
				<height>40</height>
				<textcolor>FFD7D7D7</textcolor>
				<font>FullscreenInfo3</font>
				<label>[UPPERCASE]$VAR[FullscreenLabel][/UPPERCASE]</label>
				<scroll>false</scroll>
			</control>
			
			<control type="image">
				<left>78</left>
				<top>-2</top>
				<width>170</width>
				<height>45</height>
				<texture background="true">$INFO[Player.StarRating]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			
			<control type="textbox">
				<top>0</top>
				<width>320</width>
				<height>290</height>
				<font>plot</font>
				<wrapmultiline>true</wrapmultiline>
				<label>$INFO[VideoPlayer.Plot]</label>
				<textcolor>FFD7D7D7</textcolor>
				<autoscroll>false</autoscroll>
				<align>justify</align>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width>250</width>
				<height>40</height>
				<font>FullscreenInfo2</font>
				<wrapmultiline>true</wrapmultiline>
				<label> </label><!-- empty spacer -->
				<textcolor>FFD7D7D7</textcolor>
				<autoscroll>false</autoscroll>
				<align>left</align>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width>320</width>
				<height>15</height>
				<font>FullscreenInfo2</font>
				<wrapmultiline>true</wrapmultiline>
				<label>[UPPERCASE]$INFO[VideoPlayer.Duration,, min][/UPPERCASE]</label>
				<textcolor>FFD7D7D7</textcolor>
				<autoscroll>false</autoscroll>
				<align>left</align>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width>320</width>
				<height>30</height>
				<font>FullscreenInfo3</font>
				<wrapmultiline>true</wrapmultiline>
				<label>[UPPERCASE]$INFO[VideoPlayer.Studio][/UPPERCASE]</label>
				<textcolor>FFD7D7D7</textcolor>
				<autoscroll>false</autoscroll>
				<align>left</align>
				<aligny>top</aligny>
			</control>
			
		</control>
	</control>
</control>


</controls>
</window>
