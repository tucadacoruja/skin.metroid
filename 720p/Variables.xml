<?xml version="1.0" encoding="utf-8"?>
<includes>
	
	<variable name="MultiSlide">
		<value  condition="!IsEmpty(Skin.String(Wallpaper_Folder_Path))">$INFO[Skin.String(Wallpaper_Folder_Path)]</value>
		<value  condition="Player.HasAudio">$INFO[Window(Home).Property(script.grab.fanart.Music.FanArt)]</value>
		<value  condition="!Player.HasAudio + Container.Content(movies)">$INFO[Window(Home).Property(script.grab.fanart.Movie.FanArt)]</value>
		<value  condition="!Player.HasAudio + Container.Content(seasons) | Container.Content(tvshows) | Container.Content(episodes)">$INFO[Window(Home).Property(script.grab.fanart.TV.FanArt)]</value>
		<value>$INFO[Window(Home).Property(script.grab.fanart.Global.FanArt)]</value>
	</variable>
	
	<variable name="Now_Playing_Popup_Text">
		<value condition="VideoPlayer.Content(movies)">$INFO[VideoPlayer.Title]</value>
		<value condition="VideoPlayer.Content(episodes)">$INFO[VideoPlayer.Episode,Episode ,]</value>
	</variable>
	<variable name="Now_Playing_Popup_Logo">
		<value condition="VideoPlayer.Content(movies)">$INFO[Player.Art(clearlogo)]</value>
		<value condition="VideoPlayer.Content(episodes)">$INFO[Player.Art(tvshow.clearlogo)]</value>
	</variable>
	
	<variable name="IconShowTitle">
		<value condition="IsEmpty(Container(677).ListItem.TVShowTitle)">$INFO[Container(677).ListItem(1).TVShowTitle]</value>
		<value>$INFO[Container(677).ListItem.TVShowTitle]</value>
	</variable>
	
	
	
	<variable name="Episode_title">
		<value condition="!substring(ListItem.Label,..,left) + Container.Content(episodes)">$VAR[Padded_season]E$VAR[Padded_episodes] - $INFO[ListItem.Title]</value>
		<value condition="!substring(ListItem.Label,..,left) + Container.Content(albums)">$INFO[ListItem.Artist]</value>
		<value condition="substring(ListItem.Label,..,left)">Back</value>
	</variable>
	
	<variable name="Aired_or_Artist">
		<value condition="Container.Content(episodes)">$LOCALIZE[31181] $INFO[ListItem.Premiered] - $INFO[ListItem.Duration] min</value>
		<value condition="Container.Content(albums)">$INFO[ListItem.Album] - $INFO[ListItem.Year]</value>
	</variable>
	
	<variable name="Padded_string">
		<value condition="IntegerGreaterThan(ListItem.TrackNumber,9)">$INFO[ListItem.TrackNumber]</value>
		<value condition="!IntegerGreaterThan(ListItem.TrackNumber,9)">$INFO[ListItem.TrackNumber,0]</value>
	</variable>
	
	<variable name="Padded_episodes">
		<value condition="IntegerGreaterThan(ListItem.Episode,9)">$INFO[ListItem.Episode]</value>
		<value condition="!IntegerGreaterThan(ListItem.Episode,9)">$INFO[ListItem.Episode,0]</value>
	</variable>
	
	<variable name="Padded_season">
		<value condition="IntegerGreaterThan(ListItem.Season,9)">$INFO[ListItem.Season]</value>
		<value condition="!IntegerGreaterThan(ListItem.Season,9)">$INFO[ListItem.Season,0]</value>
	</variable>
	
	<variable name="Info_Poster">
		<value condition="Container.Content(Episodes) + !Control.IsVisible(50)">$INFO[ListItem.Art(tvshow.poster)]</value>
		<value condition="!Container.Content(Episodes) + !Control.IsVisible(50)">$INFO[ListItem.Art(poster)]</value>
		<value>$INFO[Container(50).ListItem.Art(thumb)]</value>
	</variable>
	
	<variable name="Info_Image">
		<value condition="Container.Content(episodes)">$INFO[ListItem.Art(thumb)]</value>
		<value condition="SubString(Container.FolderPath,plugin,left) + IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Icon]</value>
		<value>$INFO[ListItem.Art(fanart)]</value>
	</variable>
	
	<variable name="Info_Album_Title">
		<value condition="Container.Content(Artists)">$INFO[ListItem.Artist]</value>
		<value>$INFO[ListItem.Album]</value>
	</variable>
	
	<variable name="Info_Description">
		<value condition="[Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)] + !IsEmpty(ListItem.Plot)">$INFO[ListItem.Plot]</value>
		<value condition="Container.Content(albums) + !IsEmpty(ListItem.Property(Album_Description))">$INFO[ListItem.Property(Album_Description)]</value>
		<value condition="Container.Content(artists) + !IsEmpty(ListItem.Property(Artist_Description))">$INFO[ListItem.Property(Artist_Description)]</value>
		<value condition="[SubString(Container.FolderPath,addons,left) | SubString(Container.FolderPath,plugin,left) | Container.Content(plugins)] + !IsEmpty(ListItem.Property(Addon.Description))">$INFO[ListItem.Property(Addon.Description)]</value>
	</variable>
	

	<variable name="Border_Texture">
		<value condition="!IsEmpty(ListItem.Art(thumb))">ThumbBorder.png</value>
		<value>-</value>
	</variable>

	<variable name="FullscreenLabel">
		<value condition="VideoPlayer.Content(movies)">$INFO[VideoPlayer.Genre]</value>
		<value condition="VideoPlayer.Content(episodes)">$LOCALIZE[31201] $INFO[VideoPlayer.Season] $LOCALIZE[31202]$INFO[VideoPlayer.Episode] $INFO[VideoPlayer.TVShowTitle,',']</value>
	</variable>
	
	<variable name="BannerThumb">
		<value condition="!IsEmpty(ListItem.Art(banner))">$INFO[ListItem.Art(banner)]</value>
		<value condition="IsEmpty(ListItem.Art(banner))">$INFO[ListItem.Icon]</value>
	</variable>

	<variable name="InfoPoster">
		<value condition="!IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value condition="Container.Content(Episodes)">$INFO[ListItem.Art(tvshow.poster)]</value>
		<value condition="Container.Content(Seasons) + !IsEmpty(ListItem.Art(season.poster))">$INFO[ListItem.Art(season.poster)]</value>
		<value condition="Container.Content(Seasons) + IsEmpty(ListItem.Art(season.poster))">$INFO[ListItem.Art(tvshow.poster)]</value>
		
	</variable>
	
	<variable name="PosterThumbs">
		<value condition="!IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value condition="Container.Content(Episodes)">$INFO[ListItem.Art(tvshow.poster)]</value>
		<value condition="Container.Content(Seasons) + !IsEmpty(ListItem.Art(season.poster))">$INFO[ListItem.Art(season.poster)]</value>
		<value condition="Container.Content(Seasons) + IsEmpty(ListItem.Art(season.poster))">$INFO[ListItem.Art(tvshow.poster)]</value>
		<value condition="IsEmpty(ListItem.Art(poster)) | IsEmpty(ListItem.Art(season.poster)) | IsEmpty(ListItem.Art(tvshow.poster))">$INFO[ListItem.Art(thumb)]</value>
		<value>DefaultAlbumCover.png</value>
	</variable>
	
	<variable name="EpisodeThumb">
		<value condition="substring(Listitem.Label,..,left)">$INFO[ListItem.Icon]</value>
		<value condition="!IsEmpty(ListItem.Title)">$INFO[ListItem.Art(thumb)]</value>
	</variable>
	
	<variable name="Title">
		<value condition="!IsEmpty(ListItem.Title)">$INFO[ListItem.Title]</value>
		<value condition="IsEmpty(ListItem.Title)">$INFO[ListItem.Label]</value>
	</variable>

	<variable name="Landscape_Header">
		<value condition="Container.Content(episodes) + [StringCompare(Container.FolderPath,videodb://5/) | StringCompare(Container.FolderPath,videodb://recentlyaddedepisodes/)]">$INFO[ListItem.Title]</value>
		<value condition="Container.Content(episodes)">$INFO[ListItem.Episode,,.] $INFO[ListItem.Title]</value>
		<value condition="Container.Content(songs)">$INFO[ListItem.TrackNumber,,.] $INFO[ListItem.Title]</value>
		<value condition="substring(Listitem.Label,..,left)">Back</value>
		<value>$INFO[ListItem.Label]</value>
	</variable>	
	
	<variable name="Landscape_Image">
	
		<value condition="substring(Listitem.Label,..,left)">$INFO[ListItem.Icon]</value>
		<value condition="Container.Content(seasons) + IsEmpty(ListItem.Art(season.fanart)) + !IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
		<value condition="[Container.Content(movies) | Container.Content(tvshows) | Container.Content(artists)] + !IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
		<value condition="[Container.Content(movies) | Container.Content(tvshows)] + !IsEmpty(ListItem.Art(poster))">$INFO[ListItem.Art(poster)]</value>
		<value condition="Container.Content(seasons)">$INFO[ListItem.Art(season.fanart)]</value>
		<value condition="[SubString(Container.FolderPath,addons,left) | SubString(Container.FolderPath,plugin,left)] + !IsEmpty(ListItem.Art(fanart))">$INFO[ListItem.Art(fanart)]</value>
		<value condition="[substring(listitem.filenameandpath,addons://sources/) | substring(listitem.filenameandpath,plugin://) | substring(listitem.filenameandpath,sources://video/)] + !IsEmpty(ListItem.Art(thumb))">$INFO[ListItem.Art(thumb)]</value>
		
		<value>$INFO[ListItem.Icon]</value>
	</variable>
	
	<variable name="Episode_Fallback">
		<value condition="substring(Listitem.Label,..,left)">$INFO[ListItem.Icon]</value>
		
		<value condition="IsEmpty(ListItem.Art(thumb))">DefaultFallback.png</value>
	</variable>
	
	<variable name="Fallback_Icon">
		<value condition="substring(Listitem.Label,..,left)">$INFO[ListItem.Icon]</value>
		<value condition="[IsEmpty(ListItem.Art(fanart)) + IsEmpty(ListItem.Art(poster)) + IsEmpty(ListItem.Art(banner))]">DefaultFallback.png</value>
		
	</variable>
	
	<variable name="Landscape_SubHeader">
		<value condition="Container.Content(albums)">$INFO[ListItem.Artist]</value>
		<value condition="Container.Content(addons)">$INFO[ListItem.Property(Addon.Version)] $INFO[ListItem.Property(Addon.Creator)]</value>
		<value condition="[SubString(Container.FolderPath,addons,left) | SubString(Container.FolderPath,plugin,left)] + IsEmpty(ListItem.Property(Addon.Version))">$INFO[ListItem.Studio]</value>
		<value>$INFO[ListItem.Label2]</value>
	</variable>
	
	<variable name="Landscape_Detail">
		<value condition="Container.Content(movies)">$INFO[ListItem.Year] $INFO[ListItem.Studio]</value>
		<value condition="Container.Content(tvshows)">$INFO[ListItem.Studio]</value>
		<value condition="Container.Content(seasons)">$LOCALIZE[31179] $INFO[ListItem.Property(TotalEpisodes)]</value>
		<value condition="Container.Content(episodes) + [StringCompare(Container.FolderPath,videodb://5/) | StringCompare(Container.FolderPath,videodb://recentlyaddedepisodes/)]">[UPPERCASE]$INFO[ListItem.TVShowTitle][/UPPERCASE]</value>
		<value condition="Container.Content(episodes) + !SubString(ListItem.Label,..,left)">$LOCALIZE[31181] $INFO[ListItem.Premiered]</value>
		<value condition="Container.Content(artists) + !IsEmpty(ListItem.Property(Artist_Born))">$LOCALIZE[31183] $INFO[ListItem.Property(Artist_Born)]</value>
		<value condition="Container.Content(artists) + !IsEmpty(ListItem.Property(Artist_Formed))">$LOCALIZE[31184] $INFO[ListItem.Property(Artist_Formed)]</value>
		<value condition="Container.Content(addons)">$INFO[ListItem.Property(Addon.Version)] $INFO[ListItem.Property(Addon.Creator)]</value>
		<value condition="[SubString(Container.FolderPath,addons,left) | SubString(Container.FolderPath,plugin,left)] + IsEmpty(ListItem.Property(Addon.Version))">$INFO[ListItem.Studio]</value>
		<value>$INFO[ListItem.Label2]</value>
	</variable>
	

</includes>