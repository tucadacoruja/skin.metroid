<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">1</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>

	
<controls>
	
	<control type="button" id="10">
		<description>Ok</description>
		<include>HiddenButton</include>
	</control>

	<control type="grouplist">
			<left>10</left>
			<top>5</top>
			<width>500</width>
			<height>100</height>
			<align>left</align>
			<orientation>horizontal</orientation>
			<itemgap>5</itemgap>

			
			<control type="image">
				<height>52</height>
				<width>52</width>
				<texture>osd/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>
	
			</control>
			<control type="image">
				<height>52</height>
				<width>52</width>
				<texture>osd/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>

			</control>
			<control type="image">
				<height>52</height>
				<width>52</width>
				<texture>osd/GrayBackground.png</texture>
				<aspectratio>stretch</aspectratio>

			</control>

	</control>	

	
	<control type="grouplist" id="1">
			
			<left>10</left>
			<top>5</top>
			<width>500</width>
			<height>100</height>
			<align>left</align>
			<orientation>horizontal</orientation>
			<itemgap>5</itemgap>
			<focusposition>3</focusposition>
			<ondown>Dialog.Close(songinformation)</ondown>
			<onright>13</onright>
			<!-- animation effect="fade" start="100" end="0" time="200">WindowClose</animation -->
			
			<control type="button" id="2">
				<description>down</description>
				<height>48</height>
				<width>52</width>
				<aspectratio>keep</aspectratio>
				<texturefocus flipx="true" colordiffuse="FFACACAC">osd/increase.png</texturefocus>
				<texturenofocus flipx="true">osd/increase.png</texturenofocus>
				
				<onclick>DecreaseRating</onclick>
				<onclick>SendClick(10)</onclick>
				<onclick>ActivateWindow(songinformation)</onclick>
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>
			
			<control type="button" id="3">
				<description>up</description>
				<height>48</height>
				<width>52</width>
				<aspectratio>keep</aspectratio>
				<texturefocus colordiffuse="FFACACAC">osd/increase.png</texturefocus>
				<texturenofocus>osd/increase.png</texturenofocus>
				
				<onclick>IncreaseRating</onclick>
				<onclick>SendClick(10)</onclick>
				<onclick>ActivateWindow(songinformation)</onclick>
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>

			
			<control type="button" id="4">
				<description>cancel</description>
				<height>55</height>
				<width>55</width>
				<aspectratio>keep</aspectratio>
				<texturefocus colordiffuse="FFACACAC">osd/cancel.png</texturefocus>
				<texturenofocus>osd/cancel.png</texturenofocus>
				<onclick>Dialog.Close(songinformation)</onclick>		
				<animation effect="zoom" start="100" end="120" center="auto" time="100">Focus</animation>
				<animation effect="zoom" start="120" end="100" center="auto" time="100">UnFocus</animation>
			</control>

			<control type="group">
				<control type="image">
					<description>Rating value</description>
					<left>5</left>
					<top>-5</top>
					<height>45</height>
					<width>110</width>
					<aspectratio align="left">keep</aspectratio>
					<texture>$INFO[ListItem.StarRating]</texture>
					<!-- animation effect="slide" start="0,-100" end="0,0" time="400" easing="out" tween="cubic" reversable="false" >WindowOpen</animation>
					<animation effect="slide" start="0,0" end="0,-100" time="400" easing="out" tween="cubic" reversable="false" >WindowClose</animation -->
				</control>
				<control type="label">
					<left>10</left>
					<top>20</top>
					<height>45</height>
					<width>200</width>
					<label>$INFO[ListItem.Album]</label>
					<font>WeatherSmall</font>
					<textcolor>ff959595</textcolor>
					<align>left</align>
					<aligy>bottom</aligy>
					<scroll>true</scroll>
					<!-- animation effect="slide" start="0,-100" end="0,0" time="400" easing="out" tween="cubic" reversable="false" >WindowOpen</animation>
					<animation effect="slide" start="0,0" end="0,-100" time="400" easing="out" tween="cubic" reversable="false" >WindowClose</animation -->
				</control>
			</control>
			
	</control>
	
