<?xml version="1.0" encoding="UTF-8"?>
<window id="2">
<defaultcontrol always="true">50</defaultcontrol>
<backgroundcolor>0</backgroundcolor>
<allowoverlay>yes</allowoverlay>
<views>50,602,603</views> 

<controls>
 
<control type="button" id="2">
	<include>HiddenButton</include>
</control>
<control type="button" id="3">
	<include>HiddenButton</include>
</control>
<control type="togglebutton" id="4">
	<include>HiddenButton</include>
</control>
<control type="button" id="6">
	<include>HiddenButton</include>
</control>
<control type="button" id="7">
	<include>HiddenButton</include>
</control>
<control type="radiobutton" id="9">
	<include>HiddenButton</include>
</control>
<control type="label" id="12">
	<include>HiddenButton</include>
</control>


<include>VideoWindow</include>
<include>MainMenu</include>

<control type="group">
	<animation effect="slide" start="0,0" end="-250,0" time="400" condition="!Control.HasFocus(301) + !Skin.HasSetting(LockMainMenu)">Conditional</animation>
	<control type="multiimage">
		<left>250</left>
		<top>0</top>
		<width>1280</width>
		<height>720</height>
		<aspectratio>stretch</aspectratio>
		<imagepath background="true">$VAR[MultiSlide]</imagepath>
		<timeperimage>10100</timeperimage>
		<fadetime>1000</fadetime>
		<randomize>true</randomize>
		<animation effect="fade" start="0" end="100" time="100">VisibleChange</animation>
		<animation effect="fade" start="40" end="95" time="100000" delay="2000" reversable="true" pulse="true" condition="Player.HasAudio + !Skin.HasSetting(VisLibrary)">Conditional</animation>
		
		<visible>!Player.HasVideo + IsEmpty(ListItem.Art(thumb)) + !Skin.HasSetting(BackgroundSlideshow)</visible>
	</control>
	<control type="image">
		<left>250</left>
		<top>0</top>
		<width>1280</width>
		<height>720</height>
		<aspectratio>scale</aspectratio>
		<texture background="true" >$INFO[ListItem.Art(thumb)]</texture>
		<animation effect="fade" start="0" end="100" time="100">VisibleChange</animation>
		<animation effect="fade" start="100" end="60" time="500" reversable="true" condition="!Window.IsVisible(pictureinfo)">Conditional</animation>
		<visible>!Player.HasVideo + [substring(Container.FolderPath,:\) | substring(Container.FolderPath,:/)]</visible>
		
	</control>
	<control type="image">
		<left>250</left>
		<top>0</top>
		<width>1280</width>
		<height>720</height>
		<aspectratio>stretch</aspectratio>
		<texture background="true" fallback="special://skin/extras/backgrounds/MetroidBG.png">$INFO[Skin.String(GlobalBackground)]</texture>
		<animation effect="fade" start="75" end="90" time="200" reversible="true" condition="!Player.HasVideo">Conditional</animation>
		<animation effect="fade" start="90" end="75" time="200" reversible="true" condition="Player.HasVideo">Conditional</animation>
		<animation effect="fade" start="84" end="90" time="90000" reversable="true" pulse="true" condition="Player.HasAudio + !Skin.HasSetting(VisLibrary)">Conditional</animation>
	
		<animation effect="fade" start="100" end="100" time="0" condition="Stringcompare(Skin.String(BackgroundPercentage),100) + !Player.HasMedia">Conditional</animation>
		<animation effect="fade" start="100" end="95" time="0" condition="Stringcompare(Skin.String(BackgroundPercentage),95) + !Player.HasMedia">Conditional</animation>
		<animation effect="fade" start="100" end="90" time="0" condition="Stringcompare(Skin.String(BackgroundPercentage),90) + !Player.HasMedia">Conditional</animation>
		<animation effect="fade" start="100" end="85" time="0" condition="Stringcompare(Skin.String(BackgroundPercentage),85) + !Player.HasMedia">Conditional</animation>
		<animation effect="fade" start="100" end="80" time="0" condition="Stringcompare(Skin.String(BackgroundPercentage),80) + !Player.HasMedia">Conditional</animation>
		<animation effect="fade" start="100" end="75" time="0" condition="Stringcompare(Skin.String(BackgroundPercentage),75) + !Player.HasMedia">Conditional</animation>
	</control>
	<control type="image">
		<left>235</left>
		<top>72</top>
		<width>15</width>
		<height>650</height>
		<aspectratio>stretch</aspectratio>
		<texture>shadowv.png</texture>
		<animation effect="fade" start="0" end="70" time="0" condition="true">Conditional</animation>
	</control>
</control>

<include>Background</include>




<include>List</include>
<include>Panel</include><!-- -603 --> 
<include>Polaroid</include>

<include>BottomInfoBar</include>
 

</controls>
</window>