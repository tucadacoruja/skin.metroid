<?xml version="1.0" encoding="UTF-8"?>
<includes>

	
	<include name="Landscape">

	<control type="group">
		<include>InfoOpenClose</include>
		<include>ContextFade</include>	
		<include>Keyboard</include>
		<include>Favourites</include>
		<visible>Control.IsVisible(720)</visible>
		<animation type="Visible" reversible="false">
			<effect type="fade" start="0" end="100" time="950" delay="0" />
			<effect type="zoom" start="1" end="100" time="370" center="900,360" delay="0" />
			<effect type="slide" start="0,1700" end="0,0" time="500" delay="100" reversible="false" />
		</animation>
		<animation type="Hidden" reversible="false">
			<effect type="fade" start="100" end="0" time="100" delay="0" />
		</animation>
		<animation type="WindowOpen" reversible="false">
			<effect type="fade" start="0" end="100" time="950" delay="0" />
			<effect type="zoom" start="1" end="100" time="370" center="900,360" delay="0" />
			<effect type="slide" start="0,1700" end="0,0" time="500" delay="0" reversible="false" />
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="fade" start="100" end="0" time="100" delay="100" />
		</animation>
		
